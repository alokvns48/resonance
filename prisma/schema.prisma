generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum VoiceVarient {
  SYSTEM
  CUSTOM
}

enum VoiceCatgory {
  AUDIOBOOK
  CONVERTATIONAL
  CUSTOMER_SERVICE
  GENERAL
  NARRATIVE
  CHARACTERS
  MEDITATION
  MOTIVATIONAL
  ADVERTISING
  PODCAST
  VOICEOVER
  CORPORATE
}

model Voice {
  id String   @id @default(cuid())

  orgId         String?

  name          String
  description   String?
  category      VoiceCatgory @default(GENERAL)
  language      String       @default("en-US")
  varient       VoiceVarient 
  r2ObjectKey   String?
 
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  generations   Generation[]

  @@index([varient])
  @@index([orgId])
}

model Generation {
  id String  @id @default(cuid())

  orgId         String

  voiceId       String?
  voice         Voice?  @relation(fields: [voiceId], references: [id], onDelete: SetNull)

  voiceName     String
  text          String
  r2ObjectKey   String?
  temprature    Float
  topP          Float
  topK          Float
  repetitionPenalty Float

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([orgId])
  @@index([voiceId])

}